{
    "preset": "laravel",
    "rules": {
        "@PER-CS": true,
        "@PER-CS:risky": true,
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "single_quote": {
            "strings_containing_single_quote_chars": true
        },
        "blank_line_before_statement": {
            "statements": [
                "break",
                "continue",
                "declare",
                "return",
                "throw",
                "try"
            ]
        },
        "declare_strict_types": true,
        "not_operator_with_successor_space": true,
        "concat_space": {
            "spacing": "one"
        }
    },
    "exclude": [
        "build"
    ]
}
